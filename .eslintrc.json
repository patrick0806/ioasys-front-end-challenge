{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }, //Enable jsx suport
    "ecmaVersion": 13, // javascript syntax version
    "sourceType": "script" // script or module
  },
  "rules": {
    "no-duplicate-imports": "error",
    "no-irregular-whitespace": "error",
    "no-use-before-define": "error",
    "arrow-body-style": ["warn", "as-needed"],
    "default-case": "error" /*add warn to add a default case in switch*/,
    "eqeqeq": "error" /* add an error when comparing with ==*/,
    "no-else-return": "warn" /*when else is unnecessary it is warned*/,
    "no-empty-function": "error",
    "no-var": "error"
  },
  "ignorePatterns": "node_modules/, .next/, .husky/,yarn.lock"
}
